// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  userId      String   @unique
  joinDate    DateTime @default(now())
  countyName  String  
  displayName String
  email       String
  phone       String
  facebook    String
  seller      Seller?  
}

model Seller {
  id       String    @id @default(cuid())
  user     User      @relation(fields: [userId], references: [userId])
  userId   String    @unique
  products Product[]
}

model Product {
  id       String   @id @default(cuid())
  productId   String
  name     String
  description String
  pictureUrl    String
  price    Float
  sellers  Seller[]
}
model County {
  id   String @id @default(cuid())
  name String 
  lat  String
  lon  String
}
