// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id           String   @id @default(cuid())
    joinDate     DateTime @default(now())
    county       String
    displayName  String
    email        String
    phone        String
    facebook     String
    newUser      Boolean
}
model Store {
    id        String   @id @default(cuid())
    county    String
    name      String
    address   String
    product   Product[]
}

model Product {
    id          String   @id @default(cuid())
    productId   String
    name        String
    description String
    storeId     String
    store       Store @relation(fields: [storeId], references: [id])
}
model County {
    id          String   @id @default(cuid())
    name String
    lat String
    lon String  
}